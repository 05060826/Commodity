<script>
    //首次加载
    $(function () {
        btnCha();
        showpage();
    });
    //显示数据
    function btnCha() {
        //当前第几页
        var indes = $("#pageindex").text();
        //每页多少条
        var sizes = $("#pagesize").text();
        $.ajax({
            url: "http://localhost:54063/api/Client/ClientShow?pageIndex=" + indes + "&&pageSize =" + sizes,
            type: "get",
            dataType: "json",
            contentType: "application/json",
            success: function (data) {
                
                
                $("#totalCount").text(data.toTalCount);
                $("#totalPage").text(data.pageTotal);
                $("#tab1").empty();
            
                $(data.showList).each(function () {
                    var str = '<tr>' +
                        '<td>' + this.orderitemId + '</td>' +
                        '<td>' + this.supplierId + '</td>' +
                        '<td>' + this.bookName + '</td>' +
                        '<td>' + this.bookPrice + '</td>' +
                        '<td>' + this.quantity + '</td>' +
                        '<td> </td>'
                        + '</tr>';
                    $("#tab1").append(str);
                })
            }
        })
    }

    //分页
    function showpage(name) {
        //当前第几页
        var index = Number($("#pageindex").text());
        //每页多少条
        //var size = Number($("#pagesize").text());
        ////总条数
        //var tatal = Number($("#totalCount").text());
        //总页数
        var pagetatal = Number($("#totalPage").text());
        switch (name) {
            case 'first':
                index = 1
                break;
            case 'prv':
                if (index > 1) {
                    index--;
                }
                else {
                    $("#pageindex").text(1);
                }
                break;
            case 'next':
                if (index < pagetatal) {
                    index++;
                }
                else {

                    $("#pageindex").text(pagetatal);
                }
                break;
            case 'last':
                index = pagetatal;
                break;
            default:
                break;
        }
        $("#pageindex").text(index);

        btnCha();
    };
