
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/layuiadmin/layui/layui.js"></script>
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
    <div class="layui-collapse" lay-accordion="">
        <div class="layui-colla-item">
            <h2 class="layui-colla-title">查询</h2>
            <div class="layui-colla-content layui-show">
                <div class="layui-input-inline">
                    <label>作者</label>
                </div>
                <div class="layui-input-inline">
                    <input type="text" id="AuthorName" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                </div>
                <div class="layui-input-inline">
                    <label>书名</label>
                </div>
                <div class="layui-input-inline">
                    <input type="text" id="Title" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                </div>
                <div class="layui-input-inline">
                    <label>出版社</label>
                </div>
                <div class="layui-input-inline">
                    <input type="text" id="Pubish" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                </div>
                <div class="layui-input-inline">
                    <label>分类</label>
                </div>
                <div class="layui-input-inline">
                    <select id="Type" class="layui-form-select"></select>
                </div>
                <div class="layui-inline" style="width:100px;float:right">
                    <button class="layui-btn" lay-submit lay-filter="formDemo" id="btnSelect">查询</button>
                </div>
            </div>
        </div>
    </div>
    <div style="margin-top:40px" >
        <table class="layui-hide" id="test" lay-filter="test"></table>
        <div id="laypage"></div>
    </div>
</body>
</html>
<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" lay-event="add">我要卖</a>
</script>
<script>
    layui.use('element', function () {
        var element = layui.element;
    });

    layui.use(['layer', 'form', 'table', 'util', 'admin', 'config'], function () {
        var form = layui.form;
        form.render(); //渲染页面
    });
 
    $(function () {
        var pageSize = 10; //每页显示的数据条数
        var currentPageNo = 1; //当前页数
        //获取分类
        GetType();
        //初始化获取值
        GetBookInfo(pageSize,currentPageNo);
        //查询
        $("#btnSelect").click(function () {
            GetBookInfo(pageSize,currentPageNo);
        });
        //跳转新增页面
        //$("#btnAdd").click(function () {
        //    window.location.href="/Capital/Add";
        //});
        
    })
    //分类
    function GetType() {
        $.ajax({
            url: "http://localhost:54063/api/Supplier/GetTypeData",
            async: false,
            type: "get",
            dataType: "json",
            success: function (result) {
                var str = "";
                $.each(result, function (i, n) {
                    str += "<option value='" + n.nclassId + "'>" + n.nclassName + "</option>";
                })
                $("#Type").empty();
                $("#Type").append(str);
                layui.use('form', function () {
                    var form = layui.form;
                    form.render(); //渲染页面
                });               
            }
        });
    }
    //显示数据
    function GetBookInfo(pageSize,currentPageNo) {
        var authorName = $("#AuthorName").val();
        var title = $("#Title").val();
        var pubish = $("#Pubish").val();
        var typeId = $("#Type").val();

        layui.use(['table','laypage'], function (data) {
            var table = layui.table;
            var laypage = layui.laypage;
            table.render({
                elem: '#test'
                , url: 'http://localhost:54063/api/Supplier/GetBookInfo?authorName=' + authorName + '&title=' + title + '&pubish='+pubish+'&typeId='+typeId+'+&pageName=' + currentPageNo + '&limitName=' + pageSize + ''
                , title: '收款单列表'
                , totalRow: true
                , method: 'get'
                , cols: [[
                    { type: 'checkbox', fixed: 'left' }
                    , { field: 'Isbn', title: 'ISBN', width: 100 }
                    , { field: 'Title', title: '书名', width: 100 }
                    , { field: 'Aname', title: '作者', width: 100, totalRow: true }
                    , { field: 'NclassName', title: '分类', width: 100 }
                    , { field: 'Price', title: '价格', width: 100, sort: true, totalRow: true }
                    , { field: 'Publish', title: '出版社', width: 100 }
                    , { field: 'PublishTime', title: '出版时间', width: 100  }
                    , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 100 }
                ]]
                , done: function (res, curr, count) {
                    //如果是异步请求数据方式，res即为你接口返回的信息。
                    //如果是直接赋值的方式，res即为：{data: [], count: 99} data为当前页数据、count为数据总长度
                    laypage.render({
                        elem: 'laypage'
                        , count: count
                        , curr: currentPageNo
                        , limit: pageSize
                        , layout: ['prev', 'page', 'next', 'skip', 'count', 'limit']
                        , jump: function (obj, first) {
                            if (!first) {
                                currentPageNo = obj.curr;
                                pageSize = obj.limit; 
                                GetBookInfo(pageSize,currentPageNo);
                            }
                        }
                    })
                }               
            });
            table.on('sort(test)', function (obj) {
                table.reload('test', {
                    initSort: obj
                });
             });
        });        
    }
    layui.use('table', function () {
        var table = layui.table;
        table.on('tool(test)', function (obj) {
            var data = obj.data;
            if (obj.event === 'add') {
                    $.ajax({
                        url: "http://localhost:54063/api/Supplier/GetBookData?Isbn=" + obj.data.Isbn + "",
                        type: "get",
                        dataType: "json",
                        success: function (result) {
                            str = "<div>";                           
                            str += "<div class='layui-form-item'><label class='layui-form-label'>类别</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" +result.NclassName + "'></div><label class='layui-form-label'>ISBN</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" +result.Isbn + "'></div></div>";                           
                            str += "<div class='layui-form-item'><label class='layui-form-label'>书名</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" + result.Title + "'></div><label class='layui-form-label'>作者名称</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" + result.Aname + "'></div></div>";
                            str += "<div class='layui-form-item'><label class='layui-form-label'>出版社</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" + result.Publish + "'></div><label class='layui-form-label'>出版时间</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" + result.PublishTime + "'></div></div>";
                            str += "<div class='layui-form-item'><label class='layui-form-label'>版次</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" + result.Revision + "'></div><label class='layui-form-label'>页数</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" + result.Page + "'></div></div>";
                            str += "<div class='layui-form-item'><label class='layui-form-label'>价格</label><div class='layui-input-inline'><input type='text' disabled='disabled' name='title' lay-verify='title' autocomplete='off'  class='layui-input' value='" + result.Price + "'></div><label class='layui-form-label'>折扣</label><div class='layui-input-inline'><input type='text'  name='title' lay-verify='title' autocomplete='off'  class='layui-input'></div></div>";
                            str += "<div class='layui-form-item'><label class='layui-form-label'>库存量</label><div class='layui-input-inline'><input type='text'  name='title' lay-verify='title' autocomplete='off'  class='layui-input'></div><label class='layui-form-label'>图书类型</label><div class='layui-input-inline'><select id='Type'><option value='1'>新书</option><option value='2'>旧书</option></select></div></div>";
                            str += "<div style='margin-left:230px'><button type='button' class='layui-btn'>入库</button><button type='button' class='layui-btn'>取消</button></div>";
                            str += "</div>";
                            layui.use('layer', function(){
                                  var layer = layui.layer;
  
                                layer.open({
                                    type: 1,
                                    content: str, //这里content是一个普通的String
                                   area: ['650px', '600px']
                                });
                            });;
                        }
                    });
            }
        });
    });
</script>