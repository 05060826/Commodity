<script>
    //首次加载
    $(function ()
    {
        showClient()



    })

    //显示
    function showClient()
    {
        $.ajax({
            url: "http://localhost:54063/api/AdminControl/ShowCustor",/* + gname + "&&time=" + times + "&&state=" + tates + "&&pageIndex=" + indes + "&&pageSize=" + sizes*/
            type: "get",
            dataType: "json",
            success: function (data) {

                //$("#totalCount").text(data.totalCount);
                //$("#totalPage").text(data.totalPage);
                $("#tabc").empty();

                $(data).each(function () {
                    var str = '<tr>' +
                        '<td>' + this.accountId + '</td>' +
                        '<td>' + this.accountName + '</td>' +
                        '<td>' + this.accountType + '</td>' +
                        '<td>' + this.buyAmunt + '</td>' +
                        '<td>' + this.accountPwd + '</td>' +
                        '<td>' + this.userName + '</td>' +
                        '<td>' + this.userSex + '</td>' +
                        '<td>' + this.useAge + '</td>' +
                        '<td>' + this.useTel + '</td>' +
                        '<td>' + this.userAddres + '</td>' +
                        '<td>' + this.accountEmail + '</td>' +
                        '<td>' + this.userReddate + '</td>' +
                        '<td>' + this.remark + '</td>' +
                        
                        '<td><a href="javascript: del(' + this.accountId + ')">删除|</a><a href="javascript: modify(' + this.accountId + ')">修改|</a></td>' +


                        + '</tr>';
                    $("#tabc").append(str);

                })
            }


        })


    }


</script>
