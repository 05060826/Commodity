
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
    <div id="reply">

    </div>
</body>
</html>
<script>
    $(function () {
        var Token = localStorage["Token"];

        var pageSize = 10; //每页显示的数据条数
        var currentPageNo = 1; //当前页数

        $.ajax({
            url: "http://localhost:54063/api/Supplier/GetGoodPJ?token=" + Token + "&pageName=" + currentPageNo + "&limitName=" + pageSize + "",
            type: "get",
            dataType: "json",
            success: function(result) {
                var str = "";
                var zz = "";
                $.each(result, function (i, n) {
                    $.each(n.ReplyA, function(x,y) {
                        zz +="<div>"+y+"</br></div>";
                    })
                    str += "<div  style='background-color:darkgray'><div>"+n.Isbn+"</div>"+zz+"</div>";
                })
                $("#reply").append(str);
            }
        })
    })
</script>