        function refreshHighlight(url) {
            $ = layui.jquery;
            $(".layui-nav[lay-filter='navList'] a").each(function (ind, val) {
                if ($(this).attr('href') === url) {
                    $('.layui-nav dd').removeClass('layui-this');
                    $(this).parent('dd').addClass('layui-this');
                }
            })
        }
